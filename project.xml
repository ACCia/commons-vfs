  <dependencies>
    <dependency>
      <id>ant</id>
      <version>1.5</version>
    </dependency>

    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
    </dependency>

    <dependency>
      <id>commons-net</id>
      <version>1.0.0</version>
